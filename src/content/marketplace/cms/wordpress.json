{
    "extends": [
        {
            "slug": "databases/mysql"
        }
    ],

    "name": "WordPress",
    "slug": "cms/wordpress",
    "description": "WordPress is a blog management system.",
    "about": "WordPress is a free and open-source content management system (CMS) based on PHP and MySQL.",
    "logo": "/marketplace/images/cms/wordpress.png",
    "url": "https://wordpress.org/",
    "tags": ["cms"],
    "form": {
        "type": "v-stack",
        "items": [
            {
                "type": "h-stack",
                "items": [
                    {
                        "type": "text-field",
                        "label": "Domain",
                        "name": "domain",
                        "format": "string",
                        "required": true
                    },
                    {
                        "type": "text-field",
                        "label": "Blog Name",
                        "name": "blogName",
                        "format": "string",
                        "required": true
                    }
                ]
            },
            {
                "type": "h-stack",
                "items": [
                    {
                        "type": "text-field",
                        "label": "Username",
                        "name": "user",
                        "format": "string",
                        "required": true
                    },
                    {
                        "type": "text-field",
                        "label": "Password",
                        "name": "password",
                        "format": "string",
                        "required": true
                    }
                ]
            }
        ]
    },
    "processes": [
        {
            "name": "WordPress",
            "description": "WordPress is a blog management system.",
            "url": "https://github.com/bitnami/containers/tree/main/bitnami/wordpress/",
            "data": {
                "name": "wordpress",
                "workers": [
                    {
                        "name": "main",
                        "source": {
                            "type": "docker_image",
                            "docker": {
                                "image": "bitnami/wordpress"
                            }
                        }
                    }
                ],
                "envVars": [
                    {
                        "name": "WORDPRESS_BLOG_NAME",
                        "value": "{{blogName}}"
                    },
                    {
                        "name": "WORDPRESS_DATABASE_NAME",
                        "value": "{{databases.mysql.database}}"
                    },
                    {
                        "name": "WORDPRESS_DATABASE_USER",
                        "value": "{{databases.mysql.user}}"
                    },
                    {
                        "name": "WORDPRESS_DATABASE_HOST",
                        "value": "mysql.{{service.internalDomainName}}"
                    },
                    {
                        "name": "WORDPRESS_DATABASE_PORT_NUMBER",
                        "value": "3306"
                    },
                    {
                        "name": "WORDPRESS_ENABLE_HTTPS",
                        "value": "true"
                    },
                    {
                        "name": "WORDPRESS_USERNAME",
                        "value": "{{user}}"
                    }
                ],
                "secretVars": [
                    {
                        "name": "WORDPRESS_DATABASE_PASSWORD",
                        "value": "{{databases.mysql.password}}"
                    },
                    {
                        "name": "WORDPRESS_PASSWORD",
                        "value": "{{password}}"
                    }
                ],
                "volumes": [
                    {
                        "name": "data",
                        "path": "/bitnami/wordpress"
                    }
                ],
                "caddy": [
                    {
                        "targetProtocol": "http",
                        "targetPort": "8080",
                        "publishedPort": "443",
                        "domain": "{{domain}}",
                        "path": "/*"
                    }
                ]
            }
        }
    ]
}
