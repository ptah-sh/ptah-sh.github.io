{
    "extends": [
        {
            "slug": "databases/mysql"
        }
    ],

    "name": "Storyngine",
    "slug": "cms/storyngine",
    "description": "Storyngine is a free and open-source blog engine.",
    "about": "Storyngine is a free and open-source blog engine.",
    "url": "https://github.com/ptah-sh/storyngine",
    "tags": ["cms"],
    "form": {
        "type": "v-stack",
        "items": [
            {
                "type": "h-stack",
                "items": [
                    {
                        "type": "text-field",
                        "label": "Domain",
                        "name": "domain",
                        "format": "string",
                        "required": true
                    },
                    {
                        "type": "text-field",
                        "label": "Site Name",
                        "name": "siteName",
                        "format": "string",
                        "required": true
                    }
                ]
            },
            {
                "type": "text-field",
                "label": "GTM ID",
                "name": "gtmId",
                "format": "string",
                "required": true
            }
        ]
    },
    "processes": [
        {
            "name": "Storyngine",
            "description": "Storyngine is a free and open-source blog engine.",
            "url": "https://github.com/ptah-sh/storyngine",
            "data": {
                "name": "storyngine",
                "dockerImage": "ghcr.io/ptah-sh/storyngine",
                "releaseCommand": {
                    "command": "php artisan config:cache && php artisan migrate --no-interaction --verbose --ansi --force"
                },
                "envVars": [
                    { "name": "APP_ENV", "value": "production" },
                    { "name": "APP_URL", "value": "https://{{domain}}" },
                    { "name": "APP_NAME", "value": "{{siteName}}"},
                    { "name": "APP_GTM_ID", "value": "{{gtmId}}" },
                    { "name": "LOG_CHANNEL", "value": "errorlog" },
                    { "name": "DB_CONNECTION", "value": "mysql" },
                    {
                        "name": "DB_DATABASE",
                        "value": "{{databases/mysql/database}}"
                    },
                    {
                        "name": "DB_USERNAME",
                        "value": "{{databases/mysql/user}}"
                    },
                    {
                        "name": "DB_HOST",
                        "value": "mysql.{{service/internalDomainName}}"
                    },
                    { "name": "DB_PORT", "value": "3306" }
                ],
                "secretVars": {
                    "vars": [
                        {
                            "name": "APP_KEY",
                            "value": "base64:{{randomBytes:32|base64}}"
                        },
                        {
                            "name": "DB_PASSWORD",
                            "value": "{{databases/mysql/password}}"
                        }
                    ]
                },
                "caddy": [
                    {
                        "targetProtocol": "http",
                        "targetPort": "8080",
                        "publishedPort": "443",
                        "domain": "{{domain}}",
                        "path": "/*"
                    }
                ]
            }
        }
    ]
}
