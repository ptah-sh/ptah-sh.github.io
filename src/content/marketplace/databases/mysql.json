{
    "name": "MySQL",
    "slug": "databases/mysql",
    "description": "Single-server MySQL database",
    "about": "MySQL is a powerful, open-source relational database management system that uses SQL language to manage and scale the most complicated data workloads.",
    "logo": "/marketplace/images/databases/mysql.png",
    "url": "https://www.mysql.com/",
    "tags": ["rdbms"],
    "form": {
        "type": "v-stack",
        "items": [
            {
                "type": "h-stack",
                "items": [
                    {
                        "type": "text-field",
                        "label": "User",
                        "name": "user",
                        "format": "string",
                        "required": true
                    },
                    {
                        "type": "text-field",
                        "label": "Password",
                        "name": "password",
                        "format": "string",
                        "required": true
                    }
                ]
            },
            {
                "type": "text-field",
                "label": "Database",
                "name": "database",
                "format": "string",
                "required": true
            },
            {
                "type": "h-stack",
                "items": [
                    {
                        "type": "text-field",
                        "label": "Root User",
                        "name": "rootUser",
                        "format": "string",
                        "required": true
                    },
                    {
                        "type": "text-field",
                        "label": "Root Password",
                        "name": "rootPassword",
                        "format": "string",
                        "required": true
                    }
                ]
            }
        ]
    },
    "processes": [
        {
            "name": "MySQL",
            "description": "MySQL database",
            "url": "https://github.com/bitnami/containers/tree/main/bitnami/mysql",
            "data": {
                "name": "mysql",
                "dockerImage": "bitnami/mysql:8.4",
                "envVars": [
                    {
                        "name": "MYSQL_USER",
                        "value": "{{user}}"
                    },
                    {
                        "name": "MYSQL_DATABASE",
                        "value": "{{database}}"
                    }
                ],
                "secretVars": {
                    "vars": [
                        {
                            "name": "MYSQL_ROOT_PASSWORD",
                            "value": "{{rootUser}}"
                        },
                        {
                            "name": "MYSQL_ROOT_PASSWORD",
                            "value": "{{rootPassword}}"
                        },
                        {
                            "name": "MYSQL_PASSWORD",
                            "value": "{{password}}"
                        }
                    ]
                },
                "volumes": [
                    {
                        "name": "data",
                        "path": "/bitnami/mysql",
                        "backupSchedule": null
                    }
                ]
            }
        }
    ]
}
