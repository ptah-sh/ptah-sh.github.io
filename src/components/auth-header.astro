<style>
  @keyframes float {
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-float {
    animation: float 2.5s ease-in-out infinite;
  }

  @keyframes reveal {
    0% {
      transform: translateY(100%);
    }
    100% {
      transform: translateY(0);
    }
  }

  .animate-reveal {
    animation: reveal 1s ease-in-out;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Don't slide in the banner if it's already been shown to not annoy users
    const bannerShown = localStorage.getItem('banner-shown');

    const timeout = bannerShown === 'true' ? 0 : 500;

    localStorage.setItem('banner-shown', 'true');

    setTimeout(function() {
      const banner = document.getElementById('floating-banner');
      if (banner) {
        banner.classList.remove('hidden');
        setTimeout(() => {
          banner.classList.remove('-bottom-96');
          banner.classList.add('bottom-4');

          if (timeout > 0) {
            banner.classList.add('animate-reveal');
          }

          banner.addEventListener('animationend', () => {
            banner.classList.remove('animate-reveal');
            banner.classList.add('animate-float');
          });
        }, timeout);
      }
    }, timeout);
  });
</script>